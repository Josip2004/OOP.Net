<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="0,-10,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="676">
            <ComboBox x:Name="cbFavoriteTeam" Width="190" Margin="20" SelectionChanged="cbFavoriteTeam_SelectionChanged"/>
            <TextBlock x:Name="txtResult" Width="174" FontSize="20" FontWeight="Bold" Margin="10" RenderTransformOrigin="0.509,0.492"/>
            <ComboBox x:Name="cbOpponentTeam" Width="200" Margin="20" SelectionChanged="cbOpponentTeam_SelectionChanged"/>
        </StackPanel>

        <Button x:Name="btnFavoriteInfo" Content="Favorite&#xD;&#xA;Team" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="46" Width="66"/>

        <Button x:Name="btnOppInfo" Content="Opponent" HorizontalAlignment="Left" Margin="727,10,0,0" VerticalAlignment="Top" Height="46" Width="63"/>

        <Grid x:Name="fieldGrid" Margin="20,80,20,0" VerticalAlignment="Top" Height="334">
            <Image Source="/dataWpf/FootballPitch.jpg" Stretch="Fill" Opacity="0.8" Grid.ColumnSpan="8"></Image>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="spGkFav" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spDefFav" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spMidFav" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spFwdFav" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <StackPanel x:Name="spGkOpp" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spDefOpp" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spMidOpp" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spFwdOpp" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
