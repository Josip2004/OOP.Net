<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>


        <Button x:Name="btnFavoriteInfo" Content="Favorite&#xD;&#xA;Team"
                Grid.Row="0" Grid.Column="0" Margin="10" Height="46" Width="66" Click="btnFavoriteInfo_Click"/>

        <Button x:Name="btnOppInfo" Content="Opponent"
                Grid.Row="0" Grid.Column="2" Margin="10" Height="46" Width="66" Click="btnOppInfo_Click"/>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0" Grid.Column="1"
                    HorizontalAlignment="Center" Margin="10">
            <ComboBox x:Name="cbFavoriteTeam" Width="190" Margin="10" SelectionChanged="cbFavoriteTeam_SelectionChanged"/>
            <TextBlock x:Name="txtResult" Width="180" FontSize="20" FontWeight="Bold" Margin="10" TextAlignment="Center"/>
            <ComboBox x:Name="cbOpponentTeam" Width="190" Margin="10" SelectionChanged="cbOpponentTeam_SelectionChanged"/>
        </StackPanel>


        <Grid x:Name="fieldGrid" Grid.Row="1" Grid.ColumnSpan="3" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image Source="/dataWpf/FootballPitch.jpg"
                   Stretch="Fill"
                   Opacity="0.8"
                   Grid.ColumnSpan="8"/>

            <StackPanel x:Name="spGkFav" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spDefFav" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spMidFav" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spFwdFav" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spGkOpp" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spDefOpp" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spMidOpp" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <StackPanel x:Name="spFwdOpp" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
