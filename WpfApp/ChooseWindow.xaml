<Window x:Class="WpfApp.ChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="ChooseWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <ComboBox x:Name="cbLanguage" HorizontalAlignment="Left" Margin="92,78,0,0" VerticalAlignment="Top" Width="182"/>
            <Label Content="Choose language&#xD;&#xA;" HorizontalAlignment="Left" Margin="92,34,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cbResolution" HorizontalAlignment="Left" Margin="92,306,0,0" VerticalAlignment="Top" Width="182"/>
            <Label Content="Choose resolution" HorizontalAlignment="Left" Margin="92,260,0,0" VerticalAlignment="Top"/>
            <Label Content="Choose championship" HorizontalAlignment="Left" Margin="92,148,0,0" VerticalAlignment="Top"/>
            <ComboBox x:Name="cbChampionship" HorizontalAlignment="Left" Margin="99,195,0,0" VerticalAlignment="Top" Width="175"/>
            <Button x:Name="btnApply" Content="Apply" HorizontalAlignment="Left" Margin="300,374,0,0" VerticalAlignment="Top" Height="38" Width="132" Click="Button_Click"/>

        </Grid>
    </Grid>
</Window>
