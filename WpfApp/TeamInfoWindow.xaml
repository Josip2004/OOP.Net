<Window x:Class="WpfApp.TeamInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="TeamInfoWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="txtTeamName" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtFifaCode" Text="Fifa kod: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtPlayed" Text="Broj odigranih: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtWins" Text="Broj pobjeda: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtDraws" Text="Broj neriješenih: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtLosses" Text="Broj poraza: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtGoalsScored" Text="Zabijeni golovi: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtGoalsConceded" Text="Primljeni golovi: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtGoalDifference" Text="Gol razlika: " FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
