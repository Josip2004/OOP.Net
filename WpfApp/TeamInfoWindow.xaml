<Window x:Class="WpfApp.TeamInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="TeamInfoWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock x:Name="txtTeamName" FontSize="20" FontWeight="Bold" Margin="0 0 0 10" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtFifaCode" Text="{DynamicResource txtFifaCode}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtPlayed" Text="{DynamicResource txtPlayed}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtWins" Text="{DynamicResource txtWins}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtDraws" Text="{DynamicResource txtDraws}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtLosses" Text="{DynamicResource txtLosses}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtGoalsScored" Text="{DynamicResource txtGoalsScored}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtGoalsConceded" Text="{DynamicResource txtGoalsConceded}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>
            <TextBlock x:Name="txtGoalDifference" Text="{DynamicResource txtGoalDifference}" FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
